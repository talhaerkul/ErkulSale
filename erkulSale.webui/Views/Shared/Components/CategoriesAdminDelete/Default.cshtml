
@model List<Category>

<style>
    .list-group-item.active{
        background-color: #343a40;
        color: white;
        border-color: #343a40;
    }
</style>
<div class="list-group">
    <a class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == null?"active":"")" asp-controller="Admin" asp-action="DeleteList" asp-route-id="">Hepsi</a>
    @foreach (var c in @Model)
    {
        <a class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == c.Id.ToString()?"active":"")" asp-controller="Admin" asp-action="DeleteList" asp-route-id="@c.Id">@c.Name</a>
    }
</div>