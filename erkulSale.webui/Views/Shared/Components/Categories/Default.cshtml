
@model List<Category>

<style>
    .list-group-item.active{
        background-color: #343a40;
        color: white;
        border-color: #343a40;
    }
</style>
<div class="list-group">
    <a href="~/urunler" class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == null?"active":"")" >Hepsi</a>
    @foreach (var c in @Model)
    {
        <a href="~/urunler/@c.Url" class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == c.Url?"active":"")">@c.Name</a>
    }
</div>